<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block subtitle %}{% endblock %} instasavegram</title>
    <meta name="description" content="instasavegram - a simple way to save all your Instagram photos to your local hard drive. Download your Instagram images and upload them to Facebook, Flickr or Google+.">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% if ga_tracking is not empty -%}
        <script>
            (function (a, b, c, d, e, f) {
                a.GoogleAnalyticsObject = d;
                a[d] || (a[d] =
                        function () {
                            (a[d].q = a[d].q || []).push(arguments)
                        });
                a[d].l = +new Date;
                e = b.createElement(c);
                f = b.getElementsByTagName(c)[0];
                e.src = '//www.google-analytics.com/analytics.js';
                f.parentNode.insertBefore(e, f)
            }(window, document, 'script', 'ga'));
            ga('create', '{{ ga_tracking }}');
            ga('send', 'pageview');
        </script>
    {%- endif %}

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/app/css/site.css') }}">
</head>
<body>
<nav class="navigation cf" id="nav" role="navigation">
    <ul class="nav navbar-nav">
        <li><a href="{{ path('contact') }}">contact</a></li>
        <li><a href="{{ path('faq') }}">faq</a></li>
        <li><a href="{{ path('homepage') }}">home</a></li>
    </ul>
</nav>

<div>
    <div id="content">
        {% block content %}
        {% endblock %}
    </div>
    {% set payload = block('payload') %}
    {% if payload is not empty %}
        <div id="payload">{{ payload|raw }}</div>
    {% endif %}

    <div class="footer">
            <div class="footer-text">
                <span class="footer-credits">created by
                    <a href="http://instagram.com/egonyan">@egonyan</a> and
                    <a href="http://instagram.com/zlayatapka">@zlayatapka</a>
                </span>
            </div>
    </div>
</div>

<script type="text/javascript" src="{{ asset('js/vendor.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
{% block javascripts %}
{% endblock %}
<script type="text/javascript">
    require(['app/globals', 'app/lib/utils', 'app/application', 'app/routes'], function (Globals, Utils, Application, routes) {
        Globals['app'] = new Application({
            title: 'The ID',
            routes: routes,
            controllerPath: 'app/controllers/',
            controllerSuffix: '-controller',
            root: Globals['base-url']
        });
    });
</script>
</body>
</html>
