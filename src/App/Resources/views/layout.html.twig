<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{% block subtitle %}{% endblock %} Instagram Downloader Beta</title>
    <meta name="description" content="Instagram Downloader - A simple way to export all your Instagram photos to other social services or your local hard drive. Download your Instagram images and upload them to Facebook, Flickr or Google+.">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/app/css/site.css') }}">

    {% if ga_tracking is not empty -%}
        <script>
            (function (a, b, c, d, e, f) {
                a.GoogleAnalyticsObject = d;
                a[d] || (a[d] =
                        function () {
                            (a[d].q = a[d].q || []).push(arguments)
                        });
                a[d].l = +new Date;
                e = b.createElement(c);
                f = b.getElementsByTagName(c)[0];
                e.src = '//www.google-analytics.com/analytics.js';
                f.parentNode.insertBefore(e, f)
            }(window, document, 'script', 'ga'));
            ga('create', '{{ ga_tracking }}');
            ga('send', 'pageview');
        </script>
    {%- endif %}
</head>
<body>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid navbar-static-top">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="{{ path('homepage') }}">The Instagram Downloader <small>beta</small></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('faq') }}">FAQ</a></li>
                <li><a class="contact" href="mailto:">Contact</a></li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

<div class="container-fluid">
    <div id="content">
        {% block content %}
        {% endblock %}
    </div>
    {% set payload = block('payload') %}
    {% if payload is not empty %}
        <div id="payload">{% block payload %}{% endblock %}</div>
    {% endif %}

    <div class="footer row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="footer-text">
                <span class="footer-credits col-sm-6 col-sm-offset-6">created by
                    <a href="http://instagram.com/egonyan">@egonyan</a> and
                    <a href="http://instagram.com/zlayatapka">@zlayatapka</a>
                </span>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="{{ asset('js/vendor.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
{% block javascripts %}
{% endblock %}
<script type="text/javascript">
    require(['app/globals', 'app/lib/utils', 'app/application', 'app/routes'/*, 'bootstrap/collapse'*/], function (Globals, Utils, Application, routes) {
        Globals['app'] = new Application({
            title: 'The ID',
            routes: routes,
            controllerPath: 'app/controllers/',
            controllerSuffix: '-controller',
            root: Globals['base-url']
        });
    });
</script>
</body>
</html>
