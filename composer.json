{
    "name": "naumovs/theid",
    "license": "MIT",
    "type": "project",
    "description": "instasavegram.com",
	"keywords": ["instasavegram.com"],
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "~2.5",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "twig/extensions": "~1.0",
        "symfony/assetic-bundle": "~2",
        "symfony/monolog-bundle": "~2",
        "sensio/distribution-bundle": "~2",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2",
        "incenteev/composer-parameter-handler": "~2.0",
		"composer/installers": "~1.0",

		"egonyan/jsrouting-bundle": "0.3.0",
		"naumovs/deploy-tool": "0.1.x",

		"knplabs/rad-bundle": "2.3.1",
        "doctrine/doctrine-fixtures-bundle": "~2.2"
    },
    "scripts": {
		"pre-install-cmd": [
			"App\\Shared\\Composer\\ScriptHandler::installBower",
			"App\\Shared\\Composer\\ScriptHandler::installClientApp"
		],
        "pre-update-cmd": [
			"App\\Shared\\Composer\\ScriptHandler::installBower",
			"App\\Shared\\Composer\\ScriptHandler::installClientApp"
		],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
			"App\\Shared\\Composer\\ScriptHandler::buildClientApp"

        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
			"App\\Shared\\Composer\\ScriptHandler::buildClientApp"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
		"symfony-assets-install": "symlink",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    },
	"repositories": [
		{
			"type": "vcs",
			"url":  "git@github.com:naumovs/EgoJsRoutingBundle.git"
		},
		{
			"type": "vcs",
			"url":  "git@github.com:naumovs/deploy-tool.git"
		}
	]

}
